<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/TopicRow"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

	<TextView
	android:id="@+id/TextViewPosterName"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#ffba00"
	android:textSize="12sp"
	android:paddingLeft="3px"
	/>

	<ImageView
	android:id="@+id/ImageViewCat"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="3px"
	android:paddingTop="4px"
	android:layout_toRightOf="@+id/TextViewPosterName"
	/>

	<TextView
	android:id="@+id/TextViewDatePosted"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingRight="8px"
	android:gravity="right"
	android:textSize="12sp"
	android:layout_toRightOf="@+id/ImageViewCat"
	/>

	<TextView
	android:id="@+id/TextViewPostText"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="3px"
	android:paddingRight="3px"
	android:textSize="13sp"
	android:layout_below="@+id/TextViewPosterName"
	android:textColor="#FFFFFF"
	/>

	<TextView
	android:id="@+id/TextViewReplyCount"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingRight="8px"
	android:paddingBottom="2px"
	android:textSize="10sp"
	android:layout_below="@+id/TextViewPostText"
	android:gravity="right"
	android:text="0"
	/>
	
</RelativeLayout>
