<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	android:id="@+id/ScrollViewProfile"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>	
		    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  			  android:layout_width="fill_parent" android:layout_height="match_parent" android:orientation="vertical">
		<TextView android:id="@+id/TextViewShackname" android:padding="3dip" android:textSize="22dip"
		    	  android:layout_width="wrap_content" android:layout_height="match_parent"/>
	 
		<!--  Chatty Profile -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="match_parent">
		       <TextView android:text="Chatty Profile" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="18dip" android:padding="3dip"
					  android:layout_width="wrap_content" android:layout_height="match_parent"/>
		       <TextView android:text="(autogenerated)" android:textColor="#FFFFFF" android:padding="3dip" android:textSize="10dip" android:gravity="bottom"
					  android:layout_width="wrap_content" android:layout_height="match_parent"/>
		</LinearLayout>
		<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/shackRedOrange"/>
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  			  	 android:layout_width="fill_parent" android:layout_height="match_parent" android:orientation="vertical" android:stretchColumns="1">
		    <TableRow>
		  		<TextView android:text="Registered" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewRegistered" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="First Post" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewFirstPost" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="Total Posts" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewTotalPosts" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
			  	<TextView android:text="Posts per day" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
				<TextView android:id="@+id/TextViewPostsPerDay" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		</TableLayout>
	 
			 
		<!-- Gaming Handles -->
        <TextView android:text="Gaming Handles" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="18dip" android:padding="3dip"
			  android:layout_width="wrap_content" android:layout_height="match_parent"/>
		<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/shackRedOrange"/>
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  			  	 android:layout_width="fill_parent" android:layout_height="match_parent" android:orientation="vertical" android:stretchColumns="1">
		    <TableRow>
		  		<TextView android:text="Steam" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewSteam" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="Xbox Live" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewXboxLive" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="PSN" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewPSN" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
			  	<TextView android:text="Wii" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
				<TextView android:id="@+id/TextViewWii" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
			  	<TextView android:text="XFire" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
				<TextView android:id="@+id/TextViewXFire" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		</TableLayout>
		
		<!-- Bio Data -->
        <TextView android:text="Bio Data" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="18dip" android:padding="3dip"
			  android:layout_width="wrap_content" android:layout_height="match_parent"/>
		<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/shackRedOrange"/>
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  			  	 android:layout_width="fill_parent" android:layout_height="match_parent" android:orientation="vertical" android:stretchColumns="1">
		    <TableRow>
		  		<TextView android:text="Age" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewAge" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="Gender" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewGender" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="Location" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewLocation" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
			  	<TextView android:text="Homepage" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
				<TextView android:id="@+id/TextViewHomepage" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		</TableLayout>
		 
		 <!-- Contact Info -->
        <TextView android:text="Contact Info" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="18dip" android:padding="3dip"
			  android:layout_width="wrap_content" android:layout_height="match_parent"/>
		<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/shackRedOrange"/>
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  			  	 android:layout_width="fill_parent" android:layout_height="match_parent" android:orientation="vertical" android:stretchColumns="1">
		    <TableRow>
		  		<TextView android:text="AIM" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewAIM" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="Yahoo!" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewYahoo" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
		  		<TextView android:text="MSN" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		  		<TextView android:id="@+id/TextViewMSN" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		    <TableRow>
			  	<TextView android:text="GTalk" android:padding="3dip" android:layout_width="wrap_content" android:layout_height="match_parent"/>
				<TextView android:id="@+id/TextViewGTalk" android:textColor="#FFFFFFFF"
				    	  android:paddingLeft="3dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp"
				          android:gravity="right" android:layout_width="wrap_content" android:layout_height="match_parent"/>
		    </TableRow>
		    <TableRow>
				<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF232724" android:layout_span="2"/>
		    </TableRow>
		</TableLayout>
		 
		 <!--  User Bio -->
        <TextView android:text="User Bio" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="18dip" android:padding="3dip"
			  android:layout_width="wrap_content" android:layout_height="match_parent"/>
		<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/shackRedOrange"/>
  		<TextView android:id="@+id/TextViewUserBio" android:textColor="#FFFFFFFF" android:padding="3dip"
  		          android:layout_width="wrap_content" android:layout_height="match_parent"/>
	</LinearLayout>
</ScrollView>
