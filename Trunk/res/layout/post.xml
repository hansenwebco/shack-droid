<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:id="@+id/AbsoluteLayoutPostForm"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<EditText
	android:id="@+id/EditTextPost"
	android:layout_width="fill_parent"
	android:layout_height="175dip"
	android:textSize="12dip"
	android:text=""
	android:gravity="top"
	android:minLines="20"
	android:scrollbars="vertical">
	</EditText>

	<Button
	android:id="@+id/ButtonPost"
	android:layout_width="75dip"
	android:layout_height="wrap_content"
	android:text="Post"
	android:layout_below="@+id/EditTextPost"
	android:layout_toLeftOf="@+id/ButtonCancel"
	>
	</Button>
	
	<Button
	android:id="@+id/ButtonCancel"
	android:layout_width="75dip"
	android:layout_height="wrap_content"
	android:text="Cancel"
	android:layout_below="@+id/EditTextPost"
	android:layout_centerHorizontal="true"
	>
	</Button>

	<Button
	android:id="@+id/ButtonCamera"
	android:layout_width="75dip"
	android:layout_height="wrap_content"
	android:text="Camera"
	android:layout_below="@+id/EditTextPost"
	android:layout_toRightOf="@+id/ButtonCancel">
	</Button>
	
	<TextView
	android:id="@+id/TextViewPostError"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text=""
	android:layout_below="@+id/ButtonPost"
	android:gravity="center"
	android:textSize="12dip"/>
	
	
	<TableLayout
	android:id="@+id/TableLayoutShackTags"
	android:visibility="visible"
	android:paddingTop="12dip"
	android:layout_below="@+id/TextViewPostError"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="#222222">
		<TableRow android:layout_width="fill_parent" android:gravity="center_horizontal">
			<Button 
			android:id="@+id/ButtonRed"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="red"/>
			<Button
			android:id="@+id/ButtonGreen"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9sp"
			android:text="green"/>
			<Button
			android:id="@+id/ButtonBlue"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="blue"/>
			<Button
			android:id="@+id/ButtonYellow"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="yellow"/>
		</TableRow>
		<TableRow android:gravity="center_horizontal">
			<Button
			android:id="@+id/ButtonLime"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="lime"/>
			<Button
			android:id="@+id/ButtonOrange"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="orange"/>
			<Button
			android:id="@+id/ButtonMultisync"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="multi"/>
			<Button
			android:id="@+id/ButtonOlive"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="olive"/>
		</TableRow>		
		<TableRow android:gravity="center_horizontal">
			<Button
			android:id="@+id/ButtonItalics"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="italics"/>
			<Button
			android:id="@+id/ButtonBold"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="bold"/>
			<Button
			android:id="@+id/ButtonQuote"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="quote"/>
			<Button
			android:id="@+id/ButtonSample"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="sample"/>
		</TableRow>	
		<TableRow android:gravity="center_horizontal">
			<Button
			android:id="@+id/ButtonUnderline"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="under"/>
			<Button
			android:id="@+id/ButtonStike"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="strike"/>
			<Button
			android:id="@+id/ButtonSpoil"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="spoil"/>
			<Button
			android:id="@+id/ButtonCode"
			android:layout_width="60dip"
			android:layout_height="35dip"
			android:textSize="9dip"
			android:text="code"/>
		</TableRow>					
</TableLayout>
	
	
	

</RelativeLayout>
