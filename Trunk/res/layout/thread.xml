<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutThread"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000" >

    <RelativeLayout
        android:id="@+id/ThreadTextWrap"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/TextViewThreadAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="8px"
            android:paddingTop="3px"
            android:textColor="#ffba00"
            android:textSize="12sp" >
        </TextView>

        <ImageView
            android:id="@+id/ImageViewCatTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TextViewThreadAuthor"
            android:paddingLeft="4px"
            android:paddingTop="8px" />

        <TextView
            android:id="@+id/TextViewThreadViewPostDate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dip"
            android:layout_toLeftOf="@+id/ImageViewThreadTimer"
            android:gravity="right"
            android:paddingTop="3dip"
            android:textSize="12dip" >
        </TextView>

        <ImageView
            android:id="@+id/ImageViewThreadTimer"
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dip"
            android:layout_marginTop="7dip" />

        <ScrollView
            android:id="@+id/textAreaScroller"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/TextViewThreadAuthor" >

            <TextView
                android:id="@+id/TextViewPost"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadingEdge="none"
                android:minHeight="180px"
                android:paddingBottom="10px"
                android:paddingLeft="8px"
                android:paddingRight="8px"
                android:text=""
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="12sp" >
            </TextView>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutThreadNav"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_background2"
        android:fadingEdge="none"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/ImageViewPreviousPost"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="4dip"
            android:src="@drawable/nav_previous2" >
        </ImageView>

        <ImageView
            android:id="@+id/ImageViewNextPost"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/ImageViewPreviousPost"
            android:src="@drawable/nav_next2" >
        </ImageView>

        <ImageView
            android:id="@+id/ImageViewReload"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="5dip"
            android:src="@drawable/nav_reload2" >
        </ImageView>
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/RelativeLayoutThreadNav"
        android:layout_below="@+id/textAreaScroller"
        android:layout_weight="1"
        android:background="#000000"
        android:choiceMode="singleChoice"
        android:divider="#333333"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:focusableInTouchMode="true"
        android:paddingTop="2px" />

</LinearLayout>