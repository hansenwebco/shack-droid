<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	android:id="@+id/ScrollViewSearch"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
<LinearLayout
android:id="@+id/widget50"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"

>



<TextView
android:id="@+id/TextViewLabelSearchFor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Search For"
>
</TextView>
<EditText
android:id="@+id/EditTextSearch"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:hint="Enter your keywords"
android:singleLine="true"
android:textSize="14sp"
>
</EditText>
<TextView
android:id="@+id/TextViewLabelByUser"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:singleLine="true"
android:text="By User"
>
</TextView>
<EditText
android:id="@+id/EditTextByUser"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:hint="Filter by specific user"
android:singleLine="true"
android:textSize="14sp"
>
</EditText>
<TextView
android:id="@+id/TextViewLabelParentAuthor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Parent Author"
>
</TextView>
<EditText
android:id="@+id/EditTextParentAuthor"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:hint="Filter by parent author"
android:textSize="14sp"
>
</EditText>

<Button
android:id="@+id/ButtonSearch"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Search!"
>
</Button>

</LinearLayout>
</ScrollView>